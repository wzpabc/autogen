<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tupperware.auto.mysql.mapper.IArticleMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.tupperware.auto.mysql.model.IArticle">
		<id column="id" property="id" /> 
		<result column="uid" property="uid" /> 
		<result column="title" property="title" /> 
		<result column="color" property="color" /> 
		<result column="cover" property="cover" /> 
		<result column="content" property="content" /> 
		<result column="posttime" property="posttime" /> 
	</resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, uid, title, color, cover, content, posttime
    </sql>
    
    

<select id="selectByMapParam" resultMap="BaseResultMap" parameterType="Map" >
    select  
    	<include refid="Base_Column_List" />
   	 from dbo.i_article WHERE 1=1     
    	 <if test="id != null" > and  id = #{id,jdbcType=BIGINT(20)} </if> 
		 <if test="uid != null" > and  uid = #{uid,jdbcType=INT(11)} </if> 
		 <if test="title != null" > and  title = #{title,jdbcType=VARCHAR(100)} </if> 
		 <if test="color != null" > and  color = #{color,jdbcType=VARCHAR(20)} </if> 
		 <if test="cover != null" > and  cover = #{cover,jdbcType=VARCHAR(255)} </if> 
		 <if test="content != null" > and  content = #{content,jdbcType=TEXT} </if> 
		 <if test="posttime != null" > and  posttime = #{posttime,jdbcType=TIMESTAMP} </if> 
	  </select>
  
  <select id="selectIArticleList" resultType="IArticle">
        select
        <include refid="Base_Column_List"/>
        from dbo.i_article
        order by ${sort} ${order}
    </select>
    
    <select id="selectTopIArticle" resultType="IArticle">
        select top ${n} 
        <include refid="Base_Column_List"/>
        from dbo.i_article
    </select>
    
    <select id="getByFilter" resultType="IArticle">
        select top 1 
        <include refid="Base_Column_List"/>
        from dbo.i_article 
        where 1=1
        <!--    and organno=${organno}
				and year=${year}
				and month=${month}
				and week=${week}
				and date=2018-09-29
				and organtype=${organtype} -->
    </select>
    
</mapper>
 