<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tupperware.auto.mysql.mapper.ApiuserMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.tupperware.auto.mysql.model.Apiuser">
		<id column="id" property="id" />
                <result column="username" property="username" />
                <result column="password" property="password" />
                <result column="nickname" property="nickname" />
                <result column="organno" property="organno" />
                <result column="jdeno" property="jdeno" />
    	</resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, username, password, nickname, organno, jdeno
    </sql>
    
    

<select id="selectByMapParam" resultMap="BaseResultMap" parameterType="Map" >
    select  
    	<include refid="Base_Column_List" />
   	 from apiuser WHERE 1=1     
    	 <if test="id != null" > and  id = #{id} </if> 
		 <if test="username != null" > and  username = #{username} </if> 
		 <if test="password != null" > and  password = #{password} </if> 
		 <if test="nickname != null" > and  nickname = #{nickname} </if> 
		 <if test="organno != null" > and  organno = #{organno} </if> 
		 <if test="jdeno != null" > and  jdeno = #{jdeno} </if> 
	  </select>
  
  <select id="selectApiuserList" resultType="Apiuser">
        select
        <include refid="Base_Column_List"/>
        from apiuser
        order by ${sort} ${order}
    </select>
    
</mapper>
