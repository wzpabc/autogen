<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tupperware.auto.mysql.mapper.AuthRoleOperationMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.tupperware.auto.mysql.model.AuthRoleOperation">
		<id column="roleid" property="roleid" /> 
		<result column="opid" property="opid" /> 
	</resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        roleid, opid
    </sql>
    
    

<select id="selectByMapParam" resultMap="BaseResultMap" parameterType="Map" >
    select  
    	<include refid="Base_Column_List" />
   	 from dbo.auth_role_operation WHERE 1=1     
    	 <if test="roleid != null" > and  roleid = #{roleid,jdbcType=INT(11)} </if> 
		 <if test="opid != null" > and  opid = #{opid,jdbcType=INT(11)} </if> 
	  </select>
  
  <select id="selectAuthRoleOperationList" resultType="AuthRoleOperation">
        select
        <include refid="Base_Column_List"/>
        from dbo.auth_role_operation
        order by ${sort} ${order}
    </select>
    
    <select id="selectTopAuthRoleOperation" resultType="AuthRoleOperation">
        select top ${n} 
        <include refid="Base_Column_List"/>
        from dbo.auth_role_operation
    </select>
    
    <select id="getByFilter" resultType="AuthRoleOperation">
        select top 1 
        <include refid="Base_Column_List"/>
        from dbo.auth_role_operation 
        where 1=1
        <!--    and organno=${organno}
				and year=${year}
				and month=${month}
				and week=${week}
				and date=2018-09-29
				and organtype=${organtype} -->
    </select>
    
</mapper>
 